{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "*.BodyLoggingHandler": "Debug",
      "CosmosdbConsole": "Debug"
    }
  },
  "Diginsight": {
    "Activities": {
      "LogBehavior": "Show",
      "LogLevel": "Debug", // ⚠️ Was "ActivityLogLevel" (both work for backward compatibility)
      "RecordSpanDuration": true,
      "MeterName": "CosmosdbConsole",
      //"SpanDurationMetricName": "diginsight.span_duration",
      //"SpanDurationMetricDescription": "Duration of application spans",
      "ActivitySources": {
        "Microsoft.AspNetCore": true,
        "System.Net.Http": true,
        "Experimental.*": false,
        "Diginsight.*": true,
        "CosmosdbConsole": true
      },
      "LoggedActivityNames": {
        "System.Net.Http|System.Net.Http.HttpRequestOut": "Hide",
        "Microsoft.AspNetCore.Hosting.HttpRequestIn": "Hide"
      }
    },
    "Console": {
      "TotalWidth": -1,
      "UseColor": true
    }
  },
  "Observability": {
    "ConsoleEnabled": true,
    "Log4NetEnabled": true,
    "DebugEnabled": false
  },
  "OpenTelemetry": {
    "EnableTraces": true,
    "EnableMetrics": true,
    "AzureMonitorConnectionString": "",
    "ActivitySources": [
      "Azure.Cosmos.Operation",
      "Azure.Storage.Blobs.BlobBaseClient",
      "Microsoft.AspNetCore",
      "Diginsight.*",
      "CosmosdbConsole"
    ],
    "Meters": [
      "CosmosdbConsole"
    ],
    "ExcludedHttpHosts": [
      "login.microsoftonline.com",
      ".documents.azure.com",
      ".applicationinsights.azure.com",
      ".monitor.azure.com",
      ".b2clogin.com"
    ],
    "DurationMetricTags": [
      "category_name",
      "user_company",
      "plant_name",
      "plant_company"
    ]
  },
  "AllowedHosts": "*"
}
